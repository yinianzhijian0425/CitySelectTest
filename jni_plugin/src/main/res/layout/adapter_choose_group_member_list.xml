<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:background="@drawable/selector_choose_group_ffffff"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_choose_checked"
            android:layout_width="@dimen/lk_dp_18"
            android:layout_height="@dimen/lk_dp_18"
            android:layout_marginLeft="@dimen/lk_dp_12"
            android:src="@drawable/select_choose_group_pic_check" />

        <tech.yunjing.biconlife.liblkclass.widget.LKCircleImageView
            android:id="@+id/iv_choose_members_pic"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="12dp"
            android:src="@mipmap/ic_logo"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_choose_members_nick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:text="@string/app_name"
            android:textColor="#353535"
            android:textSize="16sp"
            tools:ignore="RtlHardcoded" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:background="#d9d9d9" />
</LinearLayout>