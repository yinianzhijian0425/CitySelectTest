				android:gravity="center"
				android:left="@dimen/lk_dp_10"
				android:right="@dimen/lk_dp_10"
				android:top="@dimen/lk_dp_10">
				<shape android:shape="oval">
					<solid android:color="@color/color_EF7726"/>
