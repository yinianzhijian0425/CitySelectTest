<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

	<!-- disable -->
	<item android:state_checked="true" android:state_enabled="false">
		<layer-list>
			<item>
				<shape android:shape="oval">
					<size
						android:width="@dimen/lk_dp_30"
						android:height="@dimen/lk_dp_30"/>
					<solid android:color="@android:color/transparent"/>
				</shape>
			</item>
			<item
				android:bottom="@dimen/lk_dp_10"
				android:gravity="center"
				android:left="@dimen/lk_dp_10"
				android:right="@dimen/lk_dp_10"
				android:top="@dimen/lk_dp_10">
				<shape android:shape="oval">
					<solid android:color="@color/color_33000000"/>
				</shape>
			</item>
			<item
				android:bottom="@dimen/lk_dp_10"
				android:gravity="center"
				android:left="@dimen/lk_dp_10"
				android:right="@dimen/lk_dp_10"
				android:top="@dimen/lk_dp_10">
				<shape android:shape="oval">
					<solid android:color="@color/color_E1E1E1"/>
				</shape>
			</item>
		</layer-list>
	</item>

	<!-- disable -->
	<item android:state_enabled="false">
		<layer-list>
			<item>
				<shape android:shape="oval">
					<size
						android:width="@dimen/lk_dp_30"
						android:height="@dimen/lk_dp_30"/>
					<solid android:color="@android:color/transparent"/>
