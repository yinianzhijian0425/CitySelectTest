<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lk_dp_50"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ll_top_2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lk_dp_50"
        android:background="@color/color_FFFFFF">


        <TextView
            android:id="@+id/tv_back_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lk_dp_50"
            android:background="@drawable/selector_whitetitle_btn"
            android:gravity="center"
            android:paddingLeft="@dimen/lk_dp_15"
            android:paddingRight="@dimen/lk_dp_15"
            android:text="取消"
            android:textColor="@color/color_434343"
            android:textSize="@dimen/lk_sp_15"
            android:visibility="visible" />


        <FrameLayout
            android:id="@+id/fl_back_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/selector_whitetitle_btn"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/lk_dp_10"
            android:paddingRight="@dimen/lk_dp_10"
            android:visibility="gone">

            <ImageView
                android:id="@+id/iv_back_2"
                android:layout_width="@dimen/lk_dp_20"
                android:layout_height="@dimen/lk_dp_20"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:src="@drawable/selector_back_bg" />

            <TextView
                android:id="@+id/tv_describeBack_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:text="@string/str_bc_dialog_btn_cancel"
                android:textSize="@dimen/lk_sp_14"
                android:visibility="gone" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_describeTitle_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:maxEms="10"
            android:maxLines="1"
            android:padding="@dimen/lk_dp_5"
            android:text=""
            android:textColor="@color/color_2D2A2A"
            android:textSize="@dimen/lk_sp_16" />

        <FrameLayout
            android:id="@+id/fl_expandOption_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_whitetitle_btn"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/lk_dp_10"
            android:paddingRight="@dimen/lk_dp_10">

            <TextView
                android:id="@+id/tv_expandType_2"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/lk_dp_20"
                android:layout_gravity="center"
                android:text="@string/str_bc_dialog_btn_confirm"
                android:textSize="@dimen/lk_sp_14"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/iv_expandType_2"
                android:layout_width="@dimen/lk_dp_20"
                android:layout_height="@dimen/lk_dp_20"
                android:layout_gravity="center"
                android:src="@mipmap/icon_more"
                android:visibility="gone" />

        </FrameLayout>


        <TextView
            android:id="@+id/tv_save_2"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/lk_dp_50"
            android:layout_alignParentRight="true"
            android:background="@drawable/selector_whitetitle_btn"
            android:gravity="center"
            android:paddingLeft="@dimen/lk_dp_15"
            android:paddingRight="@dimen/lk_dp_15"
            android:text="保存"
            android:textColor="@color/color_434343"
            android:textSize="@dimen/lk_sp_15"
            android:visibility="visible" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lk_px_1"
        android:background="@color/color_DDDDDD" />
</LinearLayout>