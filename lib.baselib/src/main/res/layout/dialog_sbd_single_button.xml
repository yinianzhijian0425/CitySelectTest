<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
    android:background="@color/color_FFFFFF">

    <LinearLayout
        android:id="@+id/rl_ssb_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/color_FFFFFF">

        <TextView
            android:id="@+id/tv_ssb_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textColor="@color/color_2D2A2A"
            android:padding="@dimen/lk_dp_15"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_ssb_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:gravity="center_horizontal"
            android:textColor="@color/color_919090"
            android:padding="@dimen/lk_dp_15"
            android:visibility="gone"/>

    </LinearLayout>

    <View style="@style/CommonHorizontalDividingLineStyle"
          android:id="@+id/v_ssb_center_divider"
          android:layout_below="@+id/rl_ssb_top"/>

    <LinearLayout
        android:id="@+id/ll_ssb_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/v_ssb_center_divider"
        android:orientation="horizontal"
        android:background="@color/color_FFFFFF">

        <TextView
            android:id="@+id/btn_ssb_confirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/cancel_and_confirm_bg"
            android:text="@string/str_bc_dialog_btn_confirm"
            android:layout_weight="1"
            android:textColor="@color/color_EF7726"
            android:textSize="15sp"
            android:padding="@dimen/lk_dp_15"
            android:gravity="center"/>
    </LinearLayout>
</RelativeLayout>
