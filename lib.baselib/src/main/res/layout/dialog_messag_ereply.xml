<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/lk_dp_10"
    android:background="#F8F9F9"
    android:orientation="horizontal">

    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:maxHeight="@dimen/lk_dp_100"
        android:paddingTop="@dimen/lk_dp_3"
        android:paddingBottom="@dimen/lk_dp_3"
        android:paddingLeft="@dimen/lk_dp_5"
        android:gravity="top|left"
        android:background="@drawable/shape_rma_replybt"
        android:minHeight="@dimen/lk_dp_30" />

    <TextView
        android:id="@+id/tv_message_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/lk_dp_10"
        android:paddingRight="@dimen/lk_dp_10"
        android:paddingTop="@dimen/lk_dp_5"
        android:layout_marginLeft="@dimen/lk_dp_10"
        android:paddingBottom="@dimen/lk_dp_5"
        android:background="@drawable/ff7535_f13535_bt_shape"
        android:textColor="@color/color_FFFFFF"
        android:text="发送"/>
</LinearLayout>
