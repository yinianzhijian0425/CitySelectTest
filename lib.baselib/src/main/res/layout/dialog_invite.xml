<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_F5F5F5"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_show_share"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/lk_dp_5"
            android:gravity="center"
            android:padding="@dimen/lk_dp_10"
            android:text="通过以下方式分享"
            android:textColor="@color/color_2D2A2A"
            android:textSize="@dimen/lk_sp_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <tech.yunjing.biconlife.libbaselib.view.LKChooseView
                    android:id="@+id/milv_wechat"
                    android:layout_width="@dimen/lk_dp_60"
                    android:layout_height="@dimen/lk_dp_80"
                    android:layout_centerInParent="true"
                    android:gravity="center" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <tech.yunjing.biconlife.libbaselib.view.LKChooseView
                    android:id="@+id/milv_qq"
                    android:layout_width="@dimen/lk_dp_60"
                    android:layout_height="@dimen/lk_dp_80"
                    android:layout_centerInParent="true"
                    android:gravity="center" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <tech.yunjing.biconlife.libbaselib.view.LKChooseView
                    android:id="@+id/milv_friends"
                    android:layout_width="@dimen/lk_dp_60"
                    android:layout_height="@dimen/lk_dp_80"
                    android:layout_centerInParent="true"
                    android:gravity="center" />
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/lk_px_1"
        android:background="@color/color_CCCCCC" />

    <TextView
        android:id="@+id/tv_invite_sdu_cancel"
        android:layout_width="match_parent"
        android:layout_height="@dimen/lk_dp_50"
        android:background="@drawable/shape_share_shower"
        android:gravity="center_horizontal"
        android:padding="@dimen/lk_dp_15"
        android:text="取消"
        android:textColor="@color/color_8F8E94"
        android:textSize="@dimen/lk_sp_16" />
</LinearLayout>
    